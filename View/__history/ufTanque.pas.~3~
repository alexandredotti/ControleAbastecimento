unit ufTanque;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls, TanqueController;

type
  TfrmTanque = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    btnNovo: TButton;
    btnEditar: TButton;
    btnExcluir: TButton;
    gdTanque: TDBGrid;
    dsTanque: TDataSource;
    procedure FormCreate(Sender: TObject);
    procedure btnNovoClick(Sender: TObject);
  private
    { Private declarations }
    TanqueController : TTanqueController;
  public
    { Public declarations }
  end;

var
  frmTanque: TfrmTanque;

implementation

{$R *.dfm}

uses ufTanqueEditor;

procedure TfrmTanque.btnNovoClick(Sender: TObject);
begin
  if (FormCadastroTanque = nil) then
  begin
    Application.CreateForm(TFormCadastroTanque, FormCadastroTanque);
  end;

  FormCadastroTanque.Show();
end;

procedure TfrmTanque.FormCreate(Sender: TObject);
begin
  TanqueController := TTanqueController.Create();
  TanqueController.SetDataSouceGrid(dsTanque);
  TanqueController.Listar;
end;



end.
